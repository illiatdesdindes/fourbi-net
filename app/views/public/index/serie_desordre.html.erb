<div id="serie_desordre_bulle_desordre">
  <%= link_to image_tag('bulles/desordre.jpg', :alt => 'la boutique du désordre'), :action => :boutique_desordre %>
</div>

<div id="serie_desordre_descriptif_serie">
  <div class="serie_titre_serie"><%= raw @serie.nom %></div>
  <div class="serie_descriptif"><%= raw @serie.description %></div>
  <div class="serie_titre_boutique">Les séries du désordre</div>
  <ul id="serie_liste_serie">
  <% for serie in @series %>
    <li><%= link_to serie.nom, {:id => serie}, {:title => serie.description} %></li>
  <% end %>
  </ul>
</div>

