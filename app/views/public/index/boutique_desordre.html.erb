<div id="boutique_desordre_bulle">
  <%= image_tag 'bulles/desordre.jpg', :alt => 'la boutique du dÃ©sordre' %>
</div>

<div id="boutique_desordre_info_boutiques">
  <%= render(:partial => "public/index/boutique_series_desordre", :locals => {:boutique_desordre => @boutique_desordre}) %>
  <%= render(:partial => "public/index/boutique_series_terrier", :locals => {:boutique_terrier => @boutique_terrier}) %>
</div>

<% i = 0 %>
<% for serie in @boutique_desordre.series %>
  <% if i < 9 %>
    <% if article = Article.disponible.serie(serie).order('random()').first %>
      <div id="boutique_desordre_image_<%= i %>" class="boutique_desordre_image">
        <div><%= image_tag article.image.url, :alt => article.nom %></div>
      </div>
      <div id="boutique_desordre_cadre_<%= i %>" class="boutique_desordre_cadre">
        <%= link_to image_tag('cadres/desordre_moyen.gif', :alt => article.nom ), {:action => :article_desordre, :id => article}, {:title => article.nom} %>
      </div>
      <% i += 1 %>
    <% end %>
  <% end %>
<% end %>