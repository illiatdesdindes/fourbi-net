<div id="zc_logo"><%= image_tag 'logo.jpg' %></div>

<div id="zc_image">
  <%= image_tag @image, {:alt => @article.nom} %>
</div>

<% unless @article.vues.empty? %>
  <table id="zd_scroll_content">
    <tbody>
    <tr>
      <td><%= link_to image_tag(@article.image.url), {:action => :zoom_article, :id => @article}, {:title => 'Voir cette image'} %></td>
      <% for vue in @article.vues %>
        <td><%= link_to image_tag(vue.image.url), {:action => :zoom_vue, :id => vue}, {:title => 'Voir cette image'} %></td>
      <% end %>
    </tr>
    </tbody>
  </table>
<% end %>

