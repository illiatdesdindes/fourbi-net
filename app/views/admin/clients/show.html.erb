<fieldset title="general">
  <legend>Information générales</legend>
  <%= display_value_changed 'Nom prénom', h(@client.identifiant), 'identifiant' %>
  <%= display_value_changed 'Adresse', h(@client.adresse), 'adresse' %>
  <%= display_value_changed 'Code Postal', h(@client.code_postal), 'code_postal' %>
  <%= display_value_changed 'Ville', @client.ville, 'ville' %>
  <%= display_value_changed 'Pays', @client.pays, 'pays' %>
  <%= display_value_changed 'Email', "<a href=\"mailto:#{h(@client.email)}\">#{h(@client.email)}</a>", 'email' %>
  <%= display_value_changed 'Prix', "#{number_to_currency @client.prix}", 'prix' %>
  <% bouton_paiement = (@client.status == Client::NOUVEAU) ? " #{button_to('Chèque reçu', {:action => :cheque_recu, :id => @client}, {:class => 'bouton', :confirm => 'En êtes vous certain ?'})}" : '' %>
  <%= display_value_changed 'Status', @client.status_lisible, 'status', bouton_paiement %>
  <% bouton_envoi = (@client.status == Client::PAYE) ? " #{button_to('Commande envoyée', {:action => :commande_envoyee, :id => @client}, {:class => 'bouton', :confirm => 'En êtes vous certain ?'})}" : '' %>
  <%= display_value_changed 'Envoi', @client.date_envoi ? I18n.localize(@client.date_envoi) : 'non', 'date_envoi', bouton_envoi %>
</fieldset>
<fieldset title="content">
  <legend>Commande</legend>

  <% articles = @client.article_clients.collect{|article_client| article_client.article}.uniq %>
  <% series = articles.collect{|article| article.serie }.uniq  %>
  <% boutiques = series.collect{|serie| serie.boutique }.uniq  %>

  <% for boutique in @boutiques %>
    <% if boutiques.include? boutique %>
      <fieldset>
        <legend><%= h boutique.nom %></legend>
        <% for serie in boutique.series %>
          <% if series.include? serie %>
            <fieldset>
              <legend><%= h serie.nom %></legend>
              <table>
                <% for article in serie.articles %>
                  <% if articles.include? article %>
                    <% article_client = @client.article_clients.detect { |article_client| article_client.article == article } %>
                    <p><%= raw "#{article_client.quantite} #{link_to_view(article, 'admin/articles', h(article.nom))} à #{article_client.prix_unitaire}€" %></p>
                  <% end %>
                <% end %>
              </table>
            </fieldset>
          <% end %>
        <% end %>
      </fieldset>
    <% end %>
  <% end %>
</fieldset>

<fieldset title="paiement">
  <legend>Paiement en ligne</legend>
  <%= display_value 'Numéro d\'autorisation', @client.cyberplus_auth_number %>
  <%= display_value 'Résultat de l\'autorisation', @client.cyberplus_auth_result %>
  <%= display_value 'Certificat de paiement', @client.cyberplus_payment_certificate %>
  <%= display_value 'Résultat', @client.cyberplus_result %>
  <%= display_value 'Vérification banque', @client.cyberplus_verification_banque?.to_fs %>

</fieldset>

<table class="barreBoutons">
  <tr>
    <td><%= link_to_edit @client %></td>
    <td><%= link_to 'Liste des clients', :action => :index %></td>
  </tr>
</table>
